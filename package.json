{
  "name": "unicorn-api",
  "version": "1.0.0",
  "description": "The Unicorn REST API built on Node.js",
  "main": "server.js",
  "scripts": {
    "db:migrate": "knex migrate:latest",
    "db:rollback": "knex migrate:rollback",
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "nodemon --exec babel-node src/server.js",
    "start": "node babel-node src/server.js",
    "lint": "eslint src",
    "test:unit": "ava \"src/**/*.test.js\"",
    "test:unit:watch": "yarn test:unit --watch",
    "test:api": "ava \"tests/api/**/*.test.js\" --verbose --serial",
    "test:api:watch": "npm run test:api -- --watch",
    "precommit": "yarn lint",
    "prepush": "yarn test:unit"
  },
  "ava": {
    "require": [
      "babel-register"
    ],
    "babel": "inherit"
  },
  "author": "Gaetan GIRARDEAU",
  "license": "ISC",
  "dependencies": {
    "ava": "^0.25.0",
    "babel-eslint": "^10.0.1",
    "babel-register": "^6.26.0",
    "cors": "^2.8.5",
    "express": "^4.16.4",
    "http-errors": "^1.7.1",
    "http-status-codes": "^1.3.0",
    "knex": "^0.16.3",
    "mysql2": "^1.6.4"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-stage-2": "^6.24.1",
    "eslint": "^5.12.1",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.14.0",
    "husky": "^1.3.1",
    "nodemon": "^1.18.9",
    "supertest": "^3.3.0"
  },
  "engines": {
    "node": ">= 8.9.0"
  }
}
